    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": ".",
    "outDir": "dist",
    "noImplicitAny": false,
    "noEmit": true,
    "resolveJsonModule": true
  },
  "include": [
    "scripts/**/*",
    "test/**/*",
    "hardhat.config.ts",
    "typechain/**/*",
    "utils/**/*"
  ]
}
